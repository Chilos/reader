<Page
    x:Class="MangaReader.Client.View.Pages.AboutMangaPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MangaReader.Client.View.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:converters="using:MangaReader.Client.Converters"
    xmlns:controls="using:WinRTXamlToolkit.Controls"
    
    mc:Ignorable="d">
    <interactivity:Interaction.Behaviors>
        <core:EventTriggerBehavior EventName="Loaded">
            <core:InvokeCommandAction Command="{Binding OnLoadCommand}"/>
        </core:EventTriggerBehavior>
    </interactivity:Interaction.Behaviors>
    <Page.Resources>
        <Style x:Key="TagStyle"
               TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Name="Border" BorderThickness="1"
                                    
                                    CornerRadius="3"
                                    BorderBrush="White">
                                <Border.Background>
                                    <SolidColorBrush x:Name="ColorBrush" Color="Transparent"/>
                                </Border.Background>
                                <TextBlock 
                                           FontSize="20"
                                           Margin="3,1,3,1"
                                           Text="{TemplateBinding Content}">
                                    <TextBlock.Foreground>
                                        <SolidColorBrush x:Name="ColorBrushForeground" Color="White"/>
                                    </TextBlock.Foreground>
                                </TextBlock>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <converters:ParallaxConverter x:Key="Parallax"/>
        <converters:VisibleConverter x:Key="Visible"/>
    </Page.Resources>
    <Grid Background="#feeed7">
        <ScrollViewer x:Name="SvImageZoom"
                      MaxZoomFactor="3"
                      MinZoomFactor="1"
                      VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                      ZoomMode="Enabled">
            <Image Source="/Assets/japan-s-anime-i-manga2.jpg"
                   HorizontalAlignment="Left"
                   Width="{Binding Path=ViewportWidth, ElementName=SvImageZoom}"
                   Opacity="0.7"
                   VerticalAlignment="Top">
                <Image.RenderTransform>
                    <CompositeTransform
                        TranslateY="{Binding ElementName=MainScrollViewer, Path=VerticalOffset, Converter={StaticResource Parallax}, ConverterParameter=-0.10}" />
                </Image.RenderTransform>
            </Image>
        </ScrollViewer>
        <ScrollViewer x:Name="MainScrollViewer"
                      Visibility="{Binding MainViewVisible, Converter={StaticResource Visible}}"
                      VerticalScrollMode="Enabled"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <RelativePanel>
                    <Grid Name="MainImage"
                          Margin="50,50,0,0"
                          RelativePanel.AlignLeftWithPanel="True">
                        <Border Background="Black"
                                Opacity=".5"/>
                        <Image Width="210"
                           Height="300"
                           Margin="20"
                           Source="{Binding PagesInfo.Image, Mode=TwoWay}" />
                    </Grid>
                    <Grid Name="Header"
                          RelativePanel.RightOf="MainImage"
                          RelativePanel.AlignRightWithPanel="True"
                          Margin="20,50,50,0">
                        <Border Background="Black"
                                Opacity=".5">
                        </Border>
                        <TextBlock
                                FontSize="36"
                                Margin="10"
                                Foreground="White"
                                TextWrapping="WrapWholeWords"
                                Text="{Binding PagesInfo.EnName, Mode=TwoWay}" />

                    </Grid>
                    <Grid RelativePanel.RightOf="MainImage"
                          Name="RusHeader"
                          RelativePanel.Below="Header"
                          RelativePanel.AlignRightWithPanel="True"
                          Margin="20,10,300,0">
                        <Border Background="Black"
                                Opacity=".5">
                        </Border>
                        <TextBlock FontSize="28"
                                   Foreground="White"
                                   Margin="10"
                                   TextWrapping="WrapWholeWords"
                                   Text="{Binding PagesInfo.RusName, Mode=TwoWay}" />
                    </Grid>
                    <Grid 
                          Name="Plases"
                          RelativePanel.Below="Header"
                          RelativePanel.AlignRightWithPanel="True"
                          Width="220"
                          Margin="20,10,50,0">
                        <Border Background="Black"
                                Opacity=".5">
                        </Border>
                        <TextBlock FontSize="28"
                                   HorizontalAlignment="Center"
                                   Foreground="White"
                                   Margin="10"
                                   TextWrapping="WrapWholeWords"
                                   Text="+ 55555" />
                    </Grid>
                    <Grid RelativePanel.RightOf="MainImage"
                          Name="Contecst"
                          RelativePanel.AlignRightWithPanel="True"
                          RelativePanel.Below="RusHeader"
                          Margin="20,10,50,0">
                        <Border Background="Black"
                                Opacity=".5">
                        </Border>
                        <RelativePanel>
                            <TextBlock RelativePanel.AlignLeftWithPanel="True"
                                       Name="LbRusHeader"
                                       FontSize="22"
                                       Foreground="White"
                                       Margin="10,10,0,0"
                                       Text="Другие названия:" />
                            <TextBlock RelativePanel.RightOf="LbRusHeader"
                                       Name="AnotherHeaders"
                                       FontSize="22"
                                       Foreground="White"
                                       Margin="20,10,10,0"
                                       Text="{Binding PagesInfo.AnotherNames, Mode=TwoWay}" 
                                       TextWrapping="WrapWholeWords" />
                            <TextBlock RelativePanel.AlignLeftWithPanel="True"
                                       Name="LbAuthors"
                                       RelativePanel.Below="AnotherHeaders"
                                       FontSize="22"
                                       Foreground="White"
                                       Margin="10,10,0,0"
                                       Text="Авторы:" />
                            <TextBlock RelativePanel.RightOf="LbRusHeader"
                                       Name="Authors"
                                       RelativePanel.Below="AnotherHeaders"
                                       FontSize="22"
                                       Foreground="White"
                                       Margin="20,10,10,0"
                                       TextWrapping="WrapWholeWords"
                                       Text="{Binding PagesInfo.Author, Mode=TwoWay}" />
                            <TextBlock RelativePanel.AlignLeftWithPanel="True"
                                       Name="LbStatus"
                                       RelativePanel.Below="LbAuthors"
                                       FontSize="22"
                                       Foreground="White"
                                       Margin="10,10,0,0"
                                       Text="Статус(Томов):" />
                            <TextBlock RelativePanel.RightOf="LbRusHeader"
                                       Name="Status"
                                       RelativePanel.Below="LbAuthors"
                                       FontSize="22"
                                       Foreground="White"
                                       Margin="20,10,10,0"
                                       TextWrapping="WrapWholeWords"
                                       Text="{Binding PagesInfo.Status, Mode=TwoWay}" />
                            <TextBlock RelativePanel.AlignLeftWithPanel="True"
                                       Name="LbDownloadingStatus"
                                       RelativePanel.Below="Status"
                                       FontSize="22"
                                       Foreground="White"
                                       Margin="10,10,0,0"
                                       Text="Статус загрузок:" />
                            <TextBlock RelativePanel.RightOf="LbRusHeader"
                                       Name="DownloadingStatus"
                                       RelativePanel.Below="Status"
                                       FontSize="22"
                                       Foreground="White"
                                       Margin="20,10,10,0"
                                       TextWrapping="WrapWholeWords"
                                       Text="{Binding PagesInfo.DownloadingStatus, Mode=TwoWay}" />
                            <TextBlock RelativePanel.AlignLeftWithPanel="True"
                                       Name="LbTags"
                                       RelativePanel.Below="DownloadingStatus"
                                       FontSize="22"
                                       Foreground="White"
                                       Margin="10,10,0,0"
                                       Text="Теги:" />
                            <ItemsControl ItemsSource="{Binding PagesInfo.Tags, Mode=TwoWay}"
                                          HorizontalAlignment="Left"
                                          Name="Tags"
                                          RelativePanel.Below="DownloadingStatus"
                                          RelativePanel.RightOf="LbRusHeader"
                                          Margin="20,10,10,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <controls:WrapPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}"
                                                Style="{StaticResource TagStyle}"
                                                Margin="2" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock RelativePanel.AlignLeftWithPanel="True"
                                       Name="LbTranslaters"
                                       RelativePanel.Below="Tags"
                                       FontSize="22"
                                       Foreground="White"
                                       Margin="10,10,0,10"
                                       Text="Переводчики:" />
                            <TextBlock RelativePanel.RightOf="LbRusHeader"
                                       Name="Translaters"
                                       RelativePanel.Below="Tags"
                                       FontSize="22"
                                       Foreground="White"
                                       Margin="20,10,10,10"
                                       TextWrapping="WrapWholeWords"
                                       Text="{Binding PagesInfo.Translater, Mode=TwoWay}" />
                        </RelativePanel>
                    </Grid>
                    <Button Name="ReadOnline"
                            Content="Читать онлайн"
                            Margin="50,0,0,0"
                            RelativePanel.AlignLeftWithPanel="True"
                            RelativePanel.Below="MainImage"
                            RelativePanel.Above="Description" Width="250"
                            Command="{Binding ToReadCommand}"/>
                    <Grid RelativePanel.AlignLeftWithPanel="True"
                          RelativePanel.AlignRightWithPanel="True"
                          Margin="50,10,50,0"
                          RelativePanel.Below="Contecst"
                          Name="Description">
                        <Border Background="Black"
                                Opacity=".5">
                        </Border>
                        <TextBlock FontSize="22"
                                   Foreground="White"
                                   Margin="10"
                                   TextWrapping="WrapWholeWords"
                                   Text="{Binding PagesInfo.Description, Mode=TwoWay}" />
                    </Grid>
                </RelativePanel>
                <Grid Margin="50,20,50,0">
                    <Border Background="Black"
                                Opacity=".5">
                    </Border>
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock FontSize="24"
                                       HorizontalAlignment="Left"
                                       Foreground="White"
                                       Margin="30,10,0,5"
                                       TextWrapping="WrapWholeWords"
                                       Text="Название" />
                            <TextBlock FontSize="24"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       Foreground="White"
                                       Margin="0,10,30,5"
                                       TextWrapping="WrapWholeWords"
                                       Text="Дата" />
                        </Grid>
                        <Border Height="2"
                                Background="White"/>
                        <ListView ItemsSource="{Binding PagesInfo.Chapters}"
                                  Name="ChaptersListView"
                                  SelectionMode="None">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock FontSize="20"
                                                   
                                                   HorizontalAlignment="Left"
                                                   Foreground="White"
                                                   Margin="20,10,0,5"
                                                   TextWrapping="WrapWholeWords"
                                                   Text="{Binding Name}" />
                                        <TextBlock FontSize="20"
                                                   Grid.Column="1"
                                                   HorizontalAlignment="Right"
                                                   Foreground="White"
                                                   Margin="0,10,20,5"
                                                   TextWrapping="WrapWholeWords"
                                                   Text="{Binding Date}" />
                                    </Grid>

                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        <Grid Visibility="{Binding ProcessingRingVisible, Converter={StaticResource Visible}}">
            <Grid Background="Black"
                  Opacity=".5"/>
            <ProgressRing HorizontalAlignment="Center"
                          VerticalAlignment="Center" 
                          Width="100"
                          Height="100"
                          IsActive="True"
                          Visibility="Visible"/>
        </Grid>
    </Grid>
</Page>
